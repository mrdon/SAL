<atlassian-plugin key="com.atlassian.sal.refimpl" name="${project.name}" system="true" pluginsVersion="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${pom.version}</version>
        <vendor name="Atlassian Software Systems Pty Ltd" url="http://www.atlassian.com"/>
    </plugin-info>


    <component key="i18nResolver" name="I18n Resolver"
               class="com.atlassian.sal.refimpl.message.RefimplI18nResolver"
               system="true" public="true">
        <interface>com.atlassian.sal.api.message.I18nResolver</interface>
    </component>
    <component key="pluginSettingsFactory" name="Plugin settings factory"
               class="com.atlassian.sal.refimpl.pluginsettings.RefimplPluginSettingsFactory"
               system="true" public="true">
        <interface>com.atlassian.sal.api.pluginsettings.PluginSettingsFactory</interface>
    </component>
    <component key="componentLocator" name="component locator"
               class="com.atlassian.sal.refimpl.component.RefimplComponentLocator"
               system="true" public="true">
        <interface>com.atlassian.sal.api.component.ComponentLocator</interface>
    </component>
    <component key="pluginUpgradeManager" name="pluginUpgradeManager"
               class="com.atlassian.sal.core.upgrade.DefaultPluginUpgradeManager"
               system="true" public="true">
        <interface>com.atlassian.sal.api.upgrade.PluginUpgradeManager</interface>
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>
    <component name="Application Properties" key="applicationProperties" class="com.atlassian.sal.refimpl.RefimplApplicationProperties"
               system="true" public="true">
        <interface>com.atlassian.sal.api.ApplicationProperties</interface>
    </component>
    <component key="userManager" name="User Manager"
               class="com.atlassian.sal.refimpl.user.DefaultUserManager"
               system="true" public="true">
        <interface>com.atlassian.sal.api.user.UserManager</interface>
    </component>
    <component name="License Handler" key="licenseHandler"
               class="com.atlassian.sal.refimpl.license.RefimplLicenseHandler" system="true" public="true">
        <interface>com.atlassian.sal.api.license.LicenseHandler</interface>
    </component>
    <component name="Plugin Scheduler" key="pluginScheduler"
        class="com.atlassian.sal.core.scheduling.TimerPluginScheduler" system="true" public="true">
        <interface>com.atlassian.sal.api.scheduling.PluginScheduler</interface>
    </component>
    <component name="Plugin Lifecycle Manager" key="lifecycleManager"
               class="com.atlassian.sal.refimpl.lifecycle.RefimplLifecycleManager" system="true" public="true">
        <interface>com.atlassian.sal.api.lifecycle.LifecycleManager</interface>
    </component>
    <component name="NoOp Transaction Template" key="noopTransactionTemplate"
               class="com.atlassian.sal.core.transaction.NoOpTransactionTemplate" system="true" public="true">
        <interface>com.atlassian.sal.api.transaction.TransactionTemplate</interface>
    </component>
    <component name="Refimpl Search Provider" key="RefimplSearchProvider"
               class="com.atlassian.sal.refimpl.search.RefimplSearchProvider" system="true" public="true">
        <interface>com.atlassian.sal.api.search.SearchProvider</interface>
    </component>
    <component name="Search Query Parser" key="searchQueryParser" 
            class="com.atlassian.sal.core.search.query.DefaultSearchQueryParser" system="true" public="true">
            <interface>com.atlassian.sal.api.search.query.SearchQueryParser</interface>
    </component>
    
    <component name="Request Factory" key="requestFactory" 
               class="com.atlassian.sal.core.net.HttpClientRequestFactory" system="true" public="true">
        <interface>com.atlassian.sal.api.net.RequestFactory</interface>
    </component>

    <component name="Refimpl Project Manager" key="RefimplProjectManager"
               class="com.atlassian.sal.refimpl.project.RefimplProjectManager" system="true" public="true">
        <interface>com.atlassian.sal.api.project.ProjectManager</interface>
    </component>

    <!-- This was moved to META-INF/spring/non-autowired.xml because autowiring fails on this class
    <component name="Refimpl Thread Local Context Manager" key="RefimplThreadLocalContextManager"
               class="com.atlassian.sal.refimpl.threadlocal.RefimplThreadLocalContextManager" system="true" public="true">
        <interface>com.atlassian.sal.api.threadlocal.ThreadLocalContextManager</interface>
    </component>
    -->

</atlassian-plugin>
