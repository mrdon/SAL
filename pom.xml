<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.atlassian.sal</groupId>
    <artifactId>sal-parent</artifactId>
    <version>jira-plugins-2.0-SNAPSHOT</version>

    <name>Shared Access Layer POM</name>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.atlassian.pom</groupId>
        <artifactId>atlassian-public-pom</artifactId>
        <version>17</version>
    </parent>

    <properties>
        <plugins.version>2.1.1</plugins.version>
        <jdkLevel>1.5</jdkLevel>
        <fisheye-jar.version>1.6.4-344</fisheye-jar.version>
        <atlassian-fisheye-api.version>1.6.4-338</atlassian-fisheye-api.version>
        <confluence.version>2.10-rc1</confluence.version>
        <crowd.version>1.5-studio-1</crowd.version>
        <jira.version>3.13</jira.version>
    </properties>

    <modules>
        <module>sal-api</module>
        <module>sal-spi</module>
        <module>sal-core</module>
        <module>sal-spring</module>
        <module>sal-confluence-plugin</module>
        <module>sal-jira-plugin</module>
        <module>sal-fisheye-plugin</module>
        <module>sal-crowd-plugin</module>
        <module>sal-ctk-plugin</module>
        <module>sal-refimpl-plugin</module>
  </modules>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>atlassian-plugin.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>atlassian-plugin.xml</exclude>
                </excludes>
            </resource>
        </resources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>1.4.1</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>


    <scm>
        <connection>scm:svn:https://studio.atlassian.com/svn/SAL/branches/jira-plugins-2.0</connection>
        <developerConnection>scm:svn:https://studio.atlassian.com/svn/SAL/branches/jira-plugins-2.0</developerConnection>
        <url>https://studio.atlassian.com/svn/SAL/branches/jira-plugins-2.0</url>
    </scm>
</project>