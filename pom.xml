<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.atlassian.sal</groupId>
    <artifactId>sal-parent</artifactId>
    <version>1.1.0.beta-01</version>

	<name>Shared Access Layer POM</name>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.atlassian.pom</groupId>
        <artifactId>atlassian-public-pom</artifactId>
        <version>14</version>
    </parent>

    <properties>
        <jdkLevel>1.5</jdkLevel>
    </properties>

    <modules>
        <module>sal-api</module>
        <module>sal-core</module>
        <module>sal-spring</module>
        <module>sal-confluence-plugin</module>
        <module>sal-jira-plugin</module>
        <module>sal-fisheye-plugin</module>
        <module>sal-refimpl-plugin</module>
        <module>sal-ctk-plugin</module>
        <module>sal-spi</module>
  </modules>
	
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>atlassian-plugin.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>atlassian-plugin.xml</exclude>
                </excludes>
            </resource>
        </resources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>1.4.1</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <dependencyManagement>
        <dependencies>
        <dependency>
            <groupId>com.atlassian.plugins</groupId>
            <artifactId>atlassian-plugins-core</artifactId>
            <version>2.0.2</version>
        </dependency>
            <dependency>
            <groupId>com.atlassian.plugins</groupId>
            <artifactId>atlassian-plugins-servlet</artifactId>
            <version>2.0.2</version>
        </dependency>
        </dependencies>
    </dependencyManagement>


    <scm>
        <connection>scm:svn:https://studio.atlassian.com/svn/SAL/tags/sal-parent-1.1.0.beta-01</connection>
		<developerConnection>scm:svn:https://studio.atlassian.com/svn/SAL/tags/sal-parent-1.1.0.beta-01</developerConnection>
        <url>https://studio.atlassian.com/svn/SAL/tags/sal-parent-1.1.0.beta-01</url>
    </scm>
</project>
