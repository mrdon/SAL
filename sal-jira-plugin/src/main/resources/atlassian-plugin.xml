<atlassian-plugin key="com.atlassian.sal.jira" name="${project.name}" system="true">
    <plugin-info>
        <description>${project.description}</description>
        <version>${pom.version}</version>
        <vendor name="Atlassian Software Systems Pty Ltd" url="http://www.atlassian.com"/>
    </plugin-info>


    <component key="i18nResolver" name="I18n Resolver"
               class="com.atlassian.sal.jira.message.JiraI18nResolver"
               system="true">
        <interface>com.atlassian.sal.api.message.I18nResolver</interface>
    </component>
    <component key="pluginSettingsFactory" name="Plugin settings factory"
               class="com.atlassian.sal.jira.pluginsettings.JiraPluginSettingsFactory"
               system="true">
        <interface>com.atlassian.sal.api.pluginsettings.PluginSettingsFactory</interface>
    </component>
    <component key="componentLocator" name="component locator"
               class="com.atlassian.sal.jira.component.JiraComponentLocator"
               system="true">
        <interface>com.atlassian.sal.api.component.ComponentLocator</interface>
    </component>
    <component key="pluginUpgradeManager" name="pluginUpgradeManager"
               class="com.atlassian.sal.api.upgrade.DefaultPluginUpgradeManager"
               system="true">
        <interface>com.atlassian.sal.api.upgrade.PluginUpgradeManager</interface>
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>
    <component name="Certificate Factory" key="certificateFactory"
               class="com.atlassian.sal.jira.trusted.JiraCertificateFactory" system="true"/>
    <component name="Application Properties" key="applicationProperties" class="com.atlassian.sal.jira.JiraApplicationProperties"
               system="true">
        <interface>com.atlassian.sal.api.ApplicationProperties</interface>
    </component>
    <component key="userManager" name="User Manager"
               class="com.atlassian.sal.jira.user.DefaultUserManager"
               system="true">
        <interface>com.atlassian.sal.api.user.UserManager</interface>
    </component>
    <component name="License Handler" key="licenseHandler"
               class="com.atlassian.sal.jira.license.JiraLicenseHandler" system="true">
        <interface>com.atlassian.sal.api.license.LicenseHandler</interface>
    </component>

    <component name="Studio Scheduler" key="studioScheduler"
        class="com.atlassian.sal.jira.scheduling.JiraStudioScheduler" system="true">
        <interface>com.atlassian.sal.api.scheduling.StudioScheduler</interface>
    </component>

    <component name="Plugin Lifecycle Manager" key="lifecycleManager"
               class="com.atlassian.sal.jira.lifecycle.JiraLifecycleManager" system="true">
        <interface>com.atlassian.sal.api.lifecycle.LifecycleManager</interface>
    </component>

    <component name="NoOp Transaction Template" key="noopTransactionTemplate"
               class="com.atlassian.sal.api.transaction.NoOpTransactionTemplate" system="true">
        <interface>com.atlassian.sal.api.transaction.TransactionTemplate</interface>
    </component>

    <component name="Jira Search Provider" key="jiraSearchProvider"
               class="com.atlassian.sal.jira.search.JiraSearchProvider" system="true">
        <interface>com.atlassian.sal.api.search.SearchProvider</interface>
    </component>

</atlassian-plugin>
