<atlassian-plugin key="com.atlassian.sal.crowd" name="${project.name}" system="true">
    <plugin-info>
        <description>${project.description}</description>
        <version>${pom.version}</version>
        <vendor name="Atlassian Software Systems Pty Ltd" url="http://www.atlassian.com"/>
    </plugin-info>

    <spring key="componentLocator" class="com.atlassian.sal.spring.component.SpringComponentLocator" />

    <spring key="readWriteTransactionTemplate" class="com.atlassian.sal.spring.transaction.ReadWriteTransactionTemplate" />
    <spring key="pluginUpgradeManager" class="com.atlassian.sal.core.upgrade.DefaultPluginUpgradeManager"/>
    <spring key="lifecycleManager" class="com.atlassian.sal.crowd.lifecycle.CrowdLifecycleManager" />

    <spring key="requestFactory" class="com.atlassian.sal.core.net.HttpClientRequestFactory" />
	<spring key="pluginSettingsFactory" class="com.atlassian.sal.crowd.pluginsettings.CrowdPluginSettingsFactory" />
    <spring key="userManager" class="com.atlassian.sal.crowd.user.DefaultUserManager" />

</atlassian-plugin>
