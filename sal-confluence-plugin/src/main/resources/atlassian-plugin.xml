<atlassian-plugin key="com.atlassian.sal.confluence" name="${project.name}" system="false" pluginsVersion="2">
    <plugin-info>
        <description>
            A plugin that provides an access layer for the underlying application.
        </description>
        <vendor name="Atlassian Software Systems" url="http://www.atlassian.com"/>
        <version>${pom.version}</version>
    </plugin-info>

    <component name="I18n Resolver" key="i18nResolver" class="com.atlassian.sal.confluence.message.ConfluenceI18nResolver" system="true" public="true"/>
    <component name="Component Locator" key="componentLocator" class="com.atlassian.sal.core.component.DefaultComponentLocator" system="true" public="true"/>
    <component name="Plugin Settings Factory" key="pluginSettingsFactory" class="com.atlassian.sal.confluence.pluginsettings.ConfluencePluginSettingsFactory" system="true" public="true"/>
    <component name="Plugin Upgrade Manager" key="pluginUpgradeManager" class="com.atlassian.sal.core.upgrade.DefaultPluginUpgradeManager" system="true" public="true"/>
    <component name="Certificate Factory" key="certificateFactory" class="com.atlassian.sal.confluence.trusted.ConfluenceCertificateFactory" system="true" public="true"/>
    <component name="Application Properties" key="applicationProperties" class="com.atlassian.sal.confluence.ConfluenceApplicationProperties" system="true" public="true"/>
    <component name="User Manager" key="pluginUserManager" class="com.atlassian.sal.confluence.user.DefaultUserManager" system="true" public="true"/>
    <component name="License Handler" key="licenseHandler" class="com.atlassian.sal.confluence.license.ConfluenceLicenseHandler" system="true" public="true"/>
    <component name="Plugin Lifecycle Manager" key="pluginLifecycleManager" class="com.atlassian.sal.confluence.lifecycle.ConfluenceLifecycleManager" system="true" public="true"/>
    <component name="Read Write Transaction Template" key="readWriteTransactionTemplate" class="com.atlassian.sal.core.transaction.DefaultTransactionTemplate" system="true" public="true"/>
    <component name="Confluence search provider" key="confluenceSearchProvider" class="com.atlassian.sal.confluence.search.ConfluenceSearchProvider" system="true" public="true"/>
    <component name="Search Query Parser" key="searchQueryParser" class="com.atlassian.sal.core.search.query.DefaultSearchQueryParser" system="true" public="true"/>
    <component name="Plugin Scheduler" key="pluginScheduler" class="com.atlassian.sal.confluence.scheduling.ConfluencePluginScheduler" system="true" public="true"/>
    <component name="Request Factory" key="requestFactory" class="com.atlassian.sal.core.net.HttpClientRequestFactory" system="true" public="true"/>
    <component name="Confluence Project Manager" key="confluenceProjectManager" class="com.atlassian.sal.confluence.project.ConfluenceProjectManager" system="true" public="true"/>

</atlassian-plugin>
