<atlassian-plugin key="com.atlassian.sal.confluence" name="${project.name}" system="false" pluginsVersion="2">
    <plugin-info>
        <description>
            A plugin that provides an access layer for the underlying application.
        </description>
        <vendor name="Atlassian Software Systems" url="http://www.atlassian.com"/>
        <version>${pom.version}</version>
    </plugin-info>

    <component key="salUserManager" class="com.atlassian.sal.confluence.user.DefaultUserManager" name="User Manager" public="true">
        <interface>com.atlassian.sal.api.user.UserManager</interface>
    </component>

    <component key="i18nResolver" class="com.atlassian.sal.confluence.message.ConfluenceI18nResolver" public="true" name="I18n Resolver" >
        <interface>com.atlassian.sal.api.message.I18nResolver</interface>
	</component>

    <component key="componentLocator" class="com.atlassian.sal.core.component.DefaultComponentLocator" public="true">
        <interface>com.atlassian.sal.api.component.ComponentLocator</interface>
    </component>

    <component key="pluginSettingsFactory" class="com.atlassian.sal.confluence.pluginsettings.ConfluencePluginSettingsFactory" name="Plugin Settings Factory" public="true">
        <interface>com.atlassian.sal.api.pluginsettings.PluginSettingsFactory</interface>
	</component>
	
    <component key="certificateFactory" class="com.atlassian.sal.confluence.trusted.ConfluenceCertificateFactory" name="Certificate Factory" public="true">
    	<interface>com.atlassian.sal.core.trusted.CertificateFactory</interface>
	</component>
	
    <component key="applicationProperties" class="com.atlassian.sal.confluence.ConfluenceApplicationProperties" name="Application Properties" public="true">
    	<interface>com.atlassian.sal.api.ApplicationProperties</interface>
	</component>

    <component key="licenseHandler" class="com.atlassian.sal.confluence.license.ConfluenceLicenseHandler" name="License Handler" public="true">
    	<interface>com.atlassian.sal.api.license.LicenseHandler</interface>
	</component>

    <component key="transactionTemplate" class="com.atlassian.sal.core.transaction.HostContextTransactionTemplate" public="true" >
        <interface>com.atlassian.sal.api.transaction.TransactionTemplate</interface>
    </component>

    <component key="searchProvider" class="com.atlassian.sal.confluence.search.ConfluenceSearchProvider" name="Confluence search provider" public="true">
    	<interface>com.atlassian.sal.api.search.SearchProvider</interface>
	</component>

    <component key="searchQueryParser" class="com.atlassian.sal.core.search.query.DefaultSearchQueryParser" name="Search Query Parser" public="true">
    	<interface>com.atlassian.sal.api.search.query.SearchQueryParser</interface>
	</component>

    <component key="pluginScheduler" class="com.atlassian.sal.confluence.scheduling.ConfluencePluginScheduler" name="Plugin Scheduler" public="true">
    	<interface>com.atlassian.sal.api.scheduling.PluginScheduler</interface>
	</component>

    <component key="requestFactory" class="com.atlassian.sal.core.net.HttpClientRequestFactory" name="Request Factory" public="true">
    	<interface>com.atlassian.sal.api.net.RequestFactory</interface>
	</component>

    <component key="projectManager" class="com.atlassian.sal.confluence.project.ConfluenceProjectManager" name="Confluence Project Manager" public="true">
    	<interface>com.atlassian.sal.api.project.ProjectManager</interface>
	</component>

    <component key="threadLocalDelegateExecutorFactory" class="com.atlassian.sal.confluence.executor.ConfluenceThreadLocalDelegateExecutorFactory" name="Confluence Thread Local Delegate Executor Factory" public="true">
    	<interface>com.atlassian.sal.api.executor.ThreadLocalDelegateExecutorFactory</interface>
	</component>

    <component key="localeResolver" class="com.atlassian.sal.confluence.message.ConfluenceLocaleResolver" name="Confluence Locale Resolver" public="true">
        <interface>com.atlassian.sal.api.message.LocaleResolver</interface>
    </component>

    <component key="loginUriProvider" class="com.atlassian.sal.confluence.auth.ConfluenceLoginUriProvider" name="Confluence Login Uri Provider" public="true">
    	<interface>com.atlassian.sal.api.auth.LoginUriProvider</interface>
	</component>
    
    <component key="authenticationListener" class="com.atlassian.sal.core.auth.SeraphAuthenticationListener" public="true">
        <interface>com.atlassian.sal.api.auth.AuthenticationListener</interface>
    </component>
    
    <component key="authenticationController" class="com.atlassian.sal.core.auth.SeraphAuthenticationController" public="true">
        <interface>com.atlassian.sal.api.auth.AuthenticationController</interface>
    </component>


</atlassian-plugin>
