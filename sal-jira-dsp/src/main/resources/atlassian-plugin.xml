<atlassian-plugin key="com.atlassian.confluence.plugins.confluence-sal-dsp"
                  name="Confluence SAL DataSourceProvider Plugin" system="false" pluginsVersion="2">
    <plugin-info>
        <description>A plugin that provides the DataSourceProvider service</description>
        <vendor name="Atlassian Software Systems" url="http://www.atlassian.com"/>
        <version>${project.version}</version>
    </plugin-info>

    <component key="dataSourceProvider" class="com.atlassian.sal.jira.sql.JiraDataSourceProvider" name="Data Source Provider" public="true">
        <interface>com.atlassian.sal.api.sql.DataSourceProvider</interface>
    </component>
</atlassian-plugin>
